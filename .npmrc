# Package manager configuration for pnpm
# This ensures consistent package installation across environments

# Use pnpm as the package manager
package-manager=pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748

# Store packages in a global store for efficiency
store-dir=~/.pnpm-store

# Use strict peer dependencies
strict-peer-dependencies=false

# Auto install peers
auto-install-peers=true

# Shamefully hoist dependencies to avoid phantom dependencies
shamefully-hoist=false

# Use exact versions in lockfile
save-exact=true

# Prefer offline mode when possible
prefer-offline=true
